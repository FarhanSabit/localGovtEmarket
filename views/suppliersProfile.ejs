<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Profile</title>
    <!-- Bootstrap CSS and Font Awesome Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Member Profile</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Profile Header -->
                <div class="text-center mb-4">
                   
                    <h2><%= supplier.name %></h2>
                    <p class="text-muted"><%= supplier.category %></p>
                    <span class="badge <%= supplier.category ? 'bg-success' : 'bg-secondary' %>">
                        <%= supplier.category ? 'Active' : 'Inactive' %>
                    </span>
                </div>

                <!-- Profile Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Nin:</strong>
                        <p><%= supplier.nin %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Phone:</strong>
                        <p><%= supplier.phone_no %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Fc Number:</strong>
                        <p><%= supplier.fc_no %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Mth Pay(000s):</strong>
                        <p><%= supplier.mth_pay %></p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-center gap-3">
                    <a href="/editSuppliers/<%= supplier.id %>" class="btn btn-warning"><i class="fas fa-edit"></i> Edit Profile</a>
                    <a href="/deleteSuppliers/<%= supplier.id %>" class="btn btn-danger"><i class="fas fa-trash"></i> Delete Profile</a>
                    <a href="/SupplieReportPage" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Users List</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Font Awesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
