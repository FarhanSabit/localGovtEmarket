<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card shadow-sm p-4" style="width: 400px;">
        <div>
            <!-- Logo Section -->
            <img src="images/newlogo.svg" alt="Logo" style="width: 320px; height: 90px; margin-right: 10px;">
            
            <h3 class="text-center">Login</h3>
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" value="<%= email || '' %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>

                <!-- Market Dropdown -->
                <div class="mb-3">
                    <label class="form-label">Select Market</label>
                    <select name="market_id" class="form-control" required>
                        <option value="">Select a market</option>
                        <% markets.forEach(market => { %>
                            <option value="<%= market.id %>" <%= market.id == market_id ? 'selected' : '' %>><%= market.name %></option>
                        <% }); %>
                    </select>
                </div>

                <!-- Display Error Message -->
                <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger mt-3" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <button type="submit" class="btn btn-primary w-100">Login</button>
                <p class="text-center mt-3"><a href="/register">Register</a></p>
            </form>
        </div>
    </div>
</body>
</html>
