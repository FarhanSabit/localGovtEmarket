    <div class="table-responsive pt-3">
      <table class="table table-bordered" id="suppliersTable">
        <thead>
          <tr>
            <th> ID </th>
            <th> NAME </th>
            <th> NIN </th>
            <th> PHONE NO </th>
            <th> CATEGORY </th>
            <th> LOCK-UP NUMBER </th>
            <th> FC NO </th>
            <th> DIVISION </th>
            <th> PARISH </th>
            <th> VILLAGE </th>
            <th> STREET </th>
            <th> NATURE OF MARKET </th>
            <th> TOTAL PAID </th>
            <th> BALANCE </th>
            <th> MUNICIPALITY </th>
            <th> MTH PAY (000s) </th>
            <th> SEX </th>
            <th> FC TYPE </th>
            <th> ACTION </th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.forEach(supplier => { %>
          <tr>
            <td><%= supplier.id %></td>
            <td><%= supplier.name %></td>
            <td><%= supplier.nin %></td>
            <td><%= supplier.phone_no %></td>
            <td><%= supplier.category %></td>
            <td><%= supplier.lock_up_number %></td>
            <td><%= supplier.fc_no %></td>
            <td><%= supplier.division %></td>
            <td><%= supplier.parish %></td>
            <td><%= supplier.village %></td>
            <td><%= supplier.street %></td>
            <td><%= supplier.nature_of_market %></td>
            <td><%= supplier.total_paid %></td>
            <td><%= supplier.balance %></td>
            <td><%= supplier.municipality %></td>
            <td><%= supplier.mth_pay %></td>
            <td><%= supplier.sex %></td>
            <td><%= supplier.fc_type %></td>
            <td>
              <a href="/suppliersProfile/<%= supplier.id %>" class="btn btn-success btn-sm">
                <i class="fas fa-eye"></i> View
              </a>
              <a href="/editSuppliers/<%= supplier.id %>" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Edit
              </a>
              <a href="/deleteSuppliers/<%= supplier.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                <i class="fas fa-trash"></i> Delete
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    

    

    <!-- Pagination -->
    <div class="pt-3">
      <ul class="pagination justify-content-center" id="pagination"></ul>
