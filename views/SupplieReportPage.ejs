<%- include('partials/header') %>

<!-- Begin Card -->
<div class="card w-100">
  <div class="card-body">
    <div class="col-lg-12">
      <div class="row d-flex align-items-center justify-content-between">
        <div class="col-md-8">
          <h4 class="card-title">Members List</h4>
          <p class="card-description">
            User Type: <code>Members</code>
          </p>
        </div>
        <div class="col-md-4 d-flex justify-content-end">
          <a href="/AddSuppliers" class="btn btn-primary btn-sm" role="button">
            <i class="ti-user"></i> Add Member
          </a>
        </div>
      </div>
    </div>

    <!-- Search Box and Table -->
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="tableSearch">Search Members:</label>
          <input type="text" id="tableSearch" class="form-control" placeholder="Search for a member...">
        </div>
      </div>
    </div>

    <!-- Export Options -->
    <div class="d-flex justify-content-between pt-3">
      <button class="btn btn-secondary btn-sm" id="exportCSV">Export to CSV</button>
      <button class="btn btn-secondary btn-sm" id="exportExcel">Export to Excel</button>
      <button class="btn btn-secondary btn-sm" id="exportPDF">Export to PDF</button>
    </div>

    <!-- Table with responsive design -->
    <div class="table-responsive pt-3">
      <table class="table table-bordered" id="suppliersTable">
        <thead>
          <tr>
            <th> ID </th>
            <th> NAME </th>
            <th> NIN </th>
            <th> PHONE_NO </th>
            <th> CATEGORY </th>
            <th> FC_NO </th>
            <th> MTH_PAY(000s) </th>
            <th> Action </th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.forEach(supplier => { %>
          <tr>
            <td><%= supplier.id %></td>
            <td><%= supplier.name %></td>
            <td><%= supplier.nin %></td>
            <td><%= supplier.phone_no %></td>
            <td><%= supplier.category %></td>
            <td><%= supplier.fc_no %></td>
            <td><%= supplier.mth_pay %></td>
            <td>
              <a href="/suppliersProfile/<%= supplier.id %>" class="btn btn-success btn-sm"><i class="fas fa-view"></i> View</a>
              <a href="/editSuppliers/<%= supplier.id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
              <a href="/deleteSuppliers/<%= supplier.id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    

    <!-- Pagination -->
    <div class="pt-3">
      <ul class="pagination justify-content-center" id="pagination"></ul>
    </div>
  </div>
</div>
<!-- End Card -->

<%- include('partials/footer') %>
<%- include('partials/tableProperties', {
  table_id: 'suppliersTable'
}) %>