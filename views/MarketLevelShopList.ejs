<%- include('partials/header') %>

  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="col-lg-12">
          <div class="row d-flex align-items-center justify-content-between">
              <h3 class="card-title">Market Level Shop List</h3>
            <div class="col-md-4 d-flex justify-content-end">
              <a href="/AddLevelShops" class="btn btn-primary btn-md" role="button">                     
                Add Shop
              </a>
            </div>
          </div>       
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="tableSearch">Search Shop...</label>
                <input type="text" id="tableSearch" class="form-control" placeholder="Search...">
              </div>
            </div>
          </div>
      
          <!-- Export Options -->
          <div class="d-flex justify-content-between pt-3">
            <button class="btn btn-secondary btn-sm" id="exportCSV">Export to CSV</button>
            <button class="btn btn-secondary btn-sm" id="exportExcel">Export to Excel</button>
            <button class="btn btn-secondary btn-sm" id="exportPDF">Export to PDF</button>
          </div>             
        <div class="table-responsive pt-3">
          <table class="table table-bordered" id="suppliersTable">
            <thead>
              <tr>
                <th>
                  ID
                </th>

                <th>
                  Shop Name
                </th>

                <th>
                  Owner Name
                </th>

                <th>
                  Shop Type
                </th>

                <th>
                  Shop No.
                </th>

                <th>
                  Market Level
                </th>

                <th>
                  Monthly Rent
                </th>

                <th>
                  Total Amount
                </th>

                <th>
                  Total Due
                </th>

                <th>
                  Status 
                </th>

                <th>
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% MarketLevelShopListData.forEach(shoplistData => { %>
              <tr>
                <td>
                  <%= shoplistData.id %>
                </td>
                <td>
                  <%= shoplistData.name %>				
                </td>
                <td>
                  
                </td>
                <td>
                  <%= shoplistData.fc_type %>
                </td>

                <td><%= shoplistData.fc_no %></td>
                <td></td>
                <td><%= shoplistData.mth_pay %></td>
                <td>
                  
                </td>
                <td>
                  
                </td>
                <td>
                  Not Active	
                </td>
                <td>
                  <a href="#" class="btn btn-success btn-sm"><i class="fas fa-view"></i> View</a>
                  <a href="#" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                  <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
                </td>
              </tr>

              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
  <%- include('partials/footer') %>
  <%- include('partials/tableProperties', {
    table_id: 'suppliersTable'
  }) %>
