<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Profile</title>
    <!-- Bootstrap CSS and Font Awesome Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Member Profile</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Profile Header -->
                <div class="text-center mb-4">
                    <h2><%= member.f_name %> <%= member.l_name %></h2>
                    <p class="text-muted"><%= member.occupation %></p>
                    <span class="badge <%= member.gender === 'Male' ? 'bg-primary' : member.gender === 'Female' ? 'bg-pink' : 'bg-secondary' %>">
                        <%= member.gender || 'Not Specified' %>
                    </span>
                </div>

                <!-- Profile Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Email:</strong>
                        <p><%= member.email || 'Not Available' %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Phone:</strong>
                        <p><%= member.phone_no || 'Not Available' %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>NIN:</strong>
                        <p><%= member.nin || 'Not Available' %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Issued Card:</strong>
                        <p><%= member.issued_card || 'Not Available' %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Floor Type:</strong>
                        <p><%= member.floor_type || 'Not Specified' %></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Shop Number:</strong>
                        <p><%= member.shop_no || 'Not Specified' %></p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-center gap-3">
                    <a href="/editMember/<%= member.id %>" class="btn btn-warning"><i class="fas fa-edit"></i> Edit Profile</a>
                    <a href="/deleteMembers/<%= member.id %>" class="btn btn-danger"><i class="fas fa-trash"></i> Delete Profile</a>
                    <a href="/ninMember" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Members List</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Font Awesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
